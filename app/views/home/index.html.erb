<h1>See what people are saying about their plants:</h1>

<div class="center">
  <% @posts.reverse.each do |post| %>
  <div class="">
    <%= link_to "#{post.user.fname}", user_path(post.user.id), class: "linktoprofile" %>
  </div>
  <div class="posttitle">
    <%= post.title %>
  </div>
  <div class="posttime">
    <%= post.created_at.strftime"%d %B %Y %I:%M %p" %>
  </div>
  <div class="">
    <%= post.content %>
  </div>
  <hr>
  <% end %>
</div>
