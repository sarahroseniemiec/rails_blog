<h1>New comment</h1>
<div class="center">
  <div class="posttitle">
    <%= @post.title %>
  </div>
  <div class="">
    <%= @post.user.fname %>
    <%= @post.user.lname %>
  </div>
  <div class="postcontent">
    <%= @post.content %>
  </div>
</div>

<div class="center">
  <%= form_for [@post, @comment] do |form| %>
  <div class="">
    <%= form.label :content, "Comment" %>
  </div>
  <div class="">
    <%= form.text_area :content, cols: 50, rows: 8 %>
  </div>
  <%= form.submit "comment" %>
  <% end %>
</div>
